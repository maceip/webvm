FROM --platform=i386 i386/debian:bookworm
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install apt-utils gcc git \
	python3 vim nodejs npm \
	make curl less bash-completion \
	ca-certificates wget procps xterm
RUN useradd -m user && echo "user:password" | chpasswd

# Install Claude Code globally
RUN npm install -g @anthropic-ai/claude-code

# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd

# Create startup script for Claude Code
RUN echo '#!/bin/bash\nxterm -e claude &' > /usr/local/bin/start-claude && \
    chmod +x /usr/local/bin/start-claude

CMD [ "/usr/local/bin/start-claude" ]
